<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ğŸ’¬ Chat Messages</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>ğŸ’Œ Chat Messages</h1>

    <table>
      <thead>
        <tr>
          <th>From</th>
          <th>To</th>
          <th>Message</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <% chats.forEach(chat => { %>
          <tr>
            <td><%= chat.from %></td>
            <td><%= chat.to %></td>
            <td><%= chat.msg %></td>
            <td><%= chat.create_at.toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
